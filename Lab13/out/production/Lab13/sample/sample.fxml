<AnchorPane fx:id="scene" prefHeight="600" prefWidth="500" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <RadioButton fx:id="colorOption1" layoutX="143.0" layoutY="76.0" mnemonicParsing="false" text="Greyscale">
         <font>
            <Font size="14.0" />
         </font></RadioButton>
      <Label fx:id="colorLabel" layoutX="125.0" layoutY="39.0" text="Select a color type:">
         <font>
            <Font size="19.0" />
         </font></Label>
      <RadioButton fx:id="colorOption2" layoutX="143.0" layoutY="102.0" mnemonicParsing="false" text="P1" />
      <RadioButton fx:id="colorOption3" layoutX="142.0" layoutY="128.0" mnemonicParsing="false" text="P2" />
      <RadioButton fx:id="colorOption4" layoutX="142.0" layoutY="154.0" mnemonicParsing="false" text="P3" />
      <Label fx:id="sidedLabel" layoutX="50.0" layoutY="195.0" text="Select if you want one sided or two sided">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <RadioButton fx:id="sidedOption1" layoutX="132.0" layoutY="230.0" mnemonicParsing="false" text="one sided" />
      <RadioButton fx:id="sidedOption2" layoutX="132.0" layoutY="259.0" mnemonicParsing="false" text="two sided" />
      <Label fx:id="paperTypeLabel" layoutX="72.0" layoutY="300.0" text="Select your paper type">
