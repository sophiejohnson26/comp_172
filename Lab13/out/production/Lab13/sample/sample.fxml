         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <TextField fx:id="numPagesField" layoutX="129.0" layoutY="411.0" />
      <Button fx:id="okButton" layoutX="164.0" layoutY="456.0" mnemonicParsing="false" onMouseClicked="#okButtonClicked" text="OK" />
      <Label fx:id="costPerPageLabel" layoutX="106.0" layoutY="495.0" prefHeight="24.0" prefWidth="214.0" />
      <Label fx:id="totalCostLabel" layoutX="107.0" layoutY="528.0" prefHeight="18.0" prefWidth="278.0" />
      <Label fx:id="errorLabel" layoutX="340.0" layoutY="416.0" prefHeight="24.0" prefWidth="155.0">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
